{
  "manifest_version": 3,
  "name": "Penny Companion",
  "version": "1.0.0",
  "description": "Stop spending your life away. Penny helps you see the true cost of your purchases.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://127.0.0.1/*",
    "*://localhost/*",
    "https://api.pricesapi.io/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/penny-mascot.png",
      "48": "assets/penny-mascot.png",
      "128": "assets/penny-mascot.png"
    }
  },
  "icons": {
    "16": "assets/penny-mascot.png",
    "48": "assets/penny-mascot.png",
    "128": "assets/penny-mascot.png"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.de/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
